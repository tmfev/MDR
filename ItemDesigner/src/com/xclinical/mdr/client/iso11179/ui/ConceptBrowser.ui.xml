	<ui:style src="Editor.css" ui:field="style" type="com.xclinical.mdr.client.iso11179.ui.ConceptBrowser.Style">
		.grow {
			height: 100%;
		}
	</ui:style>
		
	<g:SplitLayoutPanel styleName="{style.grow}">
