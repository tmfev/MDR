<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.right {
			float: right;
		}		
	</ui:style>
	
	<g:VerticalPanel>
	<g:HTMLPanel>
		<div ui:field="message" />
		<table>
			<tr>
				<td>Email:</td>
				<td><g:TextBox ui:field="email" /></td>				
			</tr>
			<tr>
				<td>Password:</td>
				<td><g:PasswordTextBox ui:field="password" /></td>				
			</tr>
			<tr>
				<td colspan="2">
					<g:CheckBox text="Remember me" ui:field="stayLoggedIn" />
				</td>
			</tr>
			<tr>
				<td colspan="2">
					<span ui:field="notRecommended" />
				</td>
			</tr>
		</table>
				
	</g:HTMLPanel>
	<g:PushButton addStyleNames="{style.right}" ui:field="login">Login</g:PushButton>
	</g:VerticalPanel>
</ui:UiBinder>